<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#81C784"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/entryTypeInput"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/entryDateInput"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/entryTypeInput"
            app:layout_constraintTop_toBottomOf="@+id/entryTypeInput" />

        <TextView
            android:id="@+id/entryPriceText"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Price: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/entryTypeInput"
            app:layout_constraintTop_toTopOf="@+id/entryTypeInput" />

        <TextView
            android:id="@+id/entryPriceInput"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/entryPriceText"
            app:layout_constraintTop_toTopOf="@+id/entryPriceText" />

        <TextView
            android:id="@+id/entryAmountInput"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:gravity="center"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/entryAmountText"
            app:layout_constraintTop_toTopOf="@+id/entryAmountText" />

        <TextView
            android:id="@+id/entryAmountText"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="Amount: "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/entryPriceInput"
            app:layout_constraintTop_toTopOf="@+id/entryPriceText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>